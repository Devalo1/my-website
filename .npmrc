# NPM configuration for my-website project

# Skip optional dependencies that might cause issues in CI environments
ignore-optional=true

# Use legacy peer deps to avoid conflicts
legacy-peer-deps=true

# Sharp-specific configurations for cross-platform builds
sharp_binary_host="https://npm.taobao.org/mirrors/sharp"
sharp_libvips_binary_host="https://npm.taobao.org/mirrors/sharp-libvips"

# Explicitly tell Sharp to ignore global installation
SHARP_IGNORE_GLOBAL_LIBVIPS=1

# Ensure consistent dependency installations
save-exact=true

# Improve performance
fund=false
audit=false

# Reduce deprecation warning noise
loglevel=error

# Use the official npm registry
registry=https://registry.npmjs.org/
